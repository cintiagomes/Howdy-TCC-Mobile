<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Cadastro"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/text_conta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Já tem conta?"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_registar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Logar"
            android:textColor="#6A7DFF" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170sp"
        android:layout_height="45.3sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_deitado" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Faça seu cadastro"
        android:textColor="#303135"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttom_borda"
        android:drawableStart="@drawable/ic_person_24"
        android:drawablePadding="10dp"
        android:hint="Nome"
        android:paddingStart="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/buttom_borda"
        android:drawableStart="@drawable/ic_email_24"
        android:drawablePadding="10dp"
        android:hint="E-mail"
        android:paddingStart="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText6"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editText2"
        android:inputType="textPersonName"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/buttom_borda"
        android:drawableStart="@drawable/ic_child_24"
        android:drawablePadding="10dp"
        android:hint="Seu idioma nativo"
        android:paddingStart="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        tools:ignore="TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/editText3"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/buttom_borda"
        android:drawableStart="@drawable/ic_location_24"
        android:drawablePadding="10dp"
        android:hint="Seu idioma de interesse"
        android:paddingStart="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/buttom_borda"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:hint="Senha"
        android:paddingStart="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/buttom_borda"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:hint="Confirme sua senha"
        android:paddingStart="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="308sp"
        android:layout_height="61sp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Ao se cadastrar você concorda com as Políticas de privacidade, e Termos de serviço de Howdy. "
        android:textColor="#5C5C5C"
        android:textColorLink="#5C5C5C"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="221dp"
        android:layout_height="48dp"
        android:backgroundTint="#6A7DFF"
        android:fontFamily="@font/roboto"
        android:text="Criar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="TouchTargetSizeCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>