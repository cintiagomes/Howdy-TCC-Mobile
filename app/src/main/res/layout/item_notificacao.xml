<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F8FA"
    android:backgroundTint="#F5F8FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:padding="9dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/buttom_borda">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_user_profile_photo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo_app"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Henry da Silva"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_notification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Henry curtiu a sua publicação."
                android:fontFamily="@font/roboto"
                android:layout_marginStart="2.5dp"
                android:textColor="#696969"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/iv_notification_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_filled_heart_24"/>

                <TextView
                    android:id="@+id/tv_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5min."
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:textColor="#C4C4C4"
                    android:textSize="12dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>