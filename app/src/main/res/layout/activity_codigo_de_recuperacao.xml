<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CodigoDeRecuperacao">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170sp"
        android:layout_height="45.3sp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_deitado" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Recupere sua conta"
        android:textColor="#303135"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Insira seu e-mail"
        android:textColor="#6A7DFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="281dp"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="Insira o c칩digo que enviamos para o seu e-mail
(ele ir치 expirar em 1 hora)."
        android:textColor="#303135"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/text_codigo"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:background="@drawable/buttom_borda"
        android:drawableStart="@drawable/ic_key_24"
        android:drawablePadding="10dp"
        android:hint="C칩digo"
        android:paddingStart="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/text_senha_nova"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttom_borda"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:hint="Sua nova senha"
        android:paddingStart="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_codigo" />

    <EditText
        android:id="@+id/text_confirmacao_senha"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/buttom_borda"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:hint="Confirme sua nova senha"
        android:paddingStart="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_senha_nova"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_confirmacao_senha">

        <Button
            android:id="@+id/button_cancelar"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:backgroundTint="#E5E5E5"
            android:fontFamily="@font/roboto"
            android:text="Cancelar"
            android:textColor="#303135" />

        <Button
            android:id="@+id/button_proximo"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_marginStart="35dp"
            android:backgroundTint="#6A7DFF"
            android:fontFamily="@font/roboto"
            android:text="Pr칩ximo" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>