<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F8FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top"
        android:foregroundGravity="top"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/tv_position_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9ยบ"
            android:fontFamily="@font/roboto_bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:paddingStart="45dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_xp_collected"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/buttom_borda"
            android:backgroundTint="#336A7DFF"
            android:layout_gravity="top"
            android:foregroundGravity="top"
            android:gravity="center"
            android:text="2000 XP"
            android:textColor="#6A7DFF"
            android:layout_marginEnd="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:id="@+id/image_user1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_app"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Henry da Silva"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/ic_gps_24"/>
                    <TextView
                        android:id="@+id/tv_target_language_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingles"
                        android:fontFamily="@font/roboto"
                        android:textColor="#6A7DFF"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>