<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttom_borda"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Compartilhando ;)"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:fontFamily="@font/roboto_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_logged_profile_photo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_logo_app"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#303135"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="20dp"
                    android:text="Carlos"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/buttom_borda"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/roboto"
                android:hint="Now that I've performed the Carlos activity, I'm one step closer to what I want ðŸŽ‰ðŸ¥³ðŸŽ‰. And I'd like to thank Carlos o the same activity! ðŸ‘‡ðŸ‘‡ðŸ‘‡"
                android:paddingStart="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:elevation="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="#29B995"
                android:gravity="center"
                android:background="@drawable/buttom_borda">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_category_24"/>

            </LinearLayout>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="#2EC4F3"
                android:gravity="center"
                android:background="@drawable/buttom_borda">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera_24"/>

            </LinearLayout>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="#A06BD4"
                android:gravity="center"
                android:background="@drawable/buttom_borda">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_visibility_24"/>

            </LinearLayout>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_200"
                android:fontFamily="@font/roboto"
                android:text="Postar"
                android:textSize="12dp"/>


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_iv"
        android:src="@drawable/ic_round_close_24"
        android:layout_marginTop="10dp"
        android:layout_marginStart="320dp"
        app:layout_constraintEnd_toEndOf="@id/ll"
        app:layout_constraintStart_toStartOf="@id/ll"
        app:layout_constraintTop_toTopOf="@id/ll" />

</androidx.constraintlayout.widget.ConstraintLayout>