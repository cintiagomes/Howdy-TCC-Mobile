<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.paginaDePostagem"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6A7DFF"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/container_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/purple_200"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_more_vert_24"
        tools:ignore="SpeakableTextPresentCheck" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        android:tint="@color/white"
        android:layout_marginTop="-120dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/ic_person_24"
        android:layout_gravity="end"
        android:backgroundTint="@color/purple_200"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        android:tint="@color/white"
        android:layout_marginTop="-110dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/ic_military_24"
        android:layout_gravity="end"
        android:backgroundTint="@color/purple_200"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu_assinatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        android:tint="@color/white"
        android:layout_marginTop="-110dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/ic_money_24"
        android:layout_gravity="end"
        android:backgroundTint="@color/purple_200"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu_configuracoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        android:layout_marginTop="-110dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/ic_settings_24"
        android:layout_gravity="end"
        android:visibility="invisible"
        android:backgroundTint="@color/purple_200"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu_sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        android:layout_marginTop="-110dp"
        android:visibility="invisible"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/ic_logout_24"
        android:layout_gravity="end"
        android:backgroundTint="@color/purple_200"/>


</LinearLayout>